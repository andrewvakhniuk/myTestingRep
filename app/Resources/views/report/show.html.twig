{% extends 'report/main.html.twig' %}

{% block body %}
    <h1>Report</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if report.date %}{{ report.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ report.product }}</td>
            </tr>
            <tr>
                <th>Countity</th>
                <td>{{ report.countity }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ report.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('report_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('report_edit', { 'id': report.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
